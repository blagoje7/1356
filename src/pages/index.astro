<body>
  <div class="container">
    <h1>1356</h1>
    <p style="text-align: center; font-size: 1.8rem; color: #E95420; font-weight: 600; margin: -1rem 0 1rem 0; letter-spacing: 0.15rem; text-shadow: 0 0 15px rgba(233,84,32,0.6); background: rgba(0,0,0,0.4); padding: 0.5rem 1rem; border-radius: 8px; display: inline-block; width: auto;">Day {currentDayNumber} of 1356</p>
    <p class="subtitle">Track your daily goals</p>
    
    <div class="view-toggle">
      <button id="todayViewBtn" class="active">Today</button>
      <button id="calendarViewBtn">Calendar</button>
    </div>

    <div class="today-view" id="todayView">
      <p class="today-date">{new Date(today).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}</p>

    <div class="goals-grid" id="goalsGrid">
      {goals.map((goal) => (
        <div class="goal-card" data-goal-id={goal.id} class:list={[{ completed: goal.completed }]}>
          <div class:list={["goal-header", { "with-input": goal.id === 'coursera' }]}>
            <div class="goal-left">
              <div class="checkbox-wrapper">
                <input 
                  type="checkbox" 
                  id={`goal-${goal.id}`}
                  data-goal-id={goal.id}
                  checked={goal.completed}
                />
              </div>
              <span class="goal-name">{goal.name}</span>
            </div>
            {goal.id === 'coursera' && (
              <div class="goal-input-inline">
                <input 
                  type="text" 
                  id="currentCourse" 
                  placeholder="Course name..."
                  value={progressData.currentCourse || ''}
                />
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <div class="comment-section">
      <h2>Daily Notes</h2>
      <textarea 
        id="dailyComment" 
        placeholder="How did today go? Any thoughts or reflections..."
      >{currentEntry.comment}</textarea>
    </div>

    <button class="sync-button" id="syncButton">
      Sync to GitHub
    </button>

    <p class="auto-sync-note">Auto-syncing on every change...</p>

    <div class="status-message" id="statusMessage"></div>
    </div>

    <div class="calendar-view" id="calendarView">
      <div class="calendar-container">
        <div class="calendar-header">
          <h2 id="calendarMonthYear"></h2>
          <div class="calendar-nav">
            <button id="prevMonth">‚Üê</button>
            <button id="todayBtn">Today</button>
            <button id="nextMonth">‚Üí</button>
          </div>
        </div>
        <div class="calendar-grid" id="calendarGrid"></div>
      </div>
      
      <div class="day-details" id="dayDetails">
        <div class="day-details-content">
          <div class="day-details-close" id="dayDetailsClose">√ó</div>
          <h3 id="dayDetailsDate"></h3>
          <ul class="day-details-list" id="dayDetailsList"></ul>
          <div class="day-details-comment" id="dayDetailsComment" style="display: none;">
            <h4>Daily Notes</h4>
            <p id="dayDetailsCommentText"></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="token-expiry-reminder">
    <strong>‚ö†Ô∏è Token Reminder</strong>
    GitHub token expires: <span class="date">Jan 9, 2027</span>
  </div>

  <div class="password-modal" id="passwordModal">
    <div class="password-modal-content">
      <h3>üîí AUTHENTICATION REQUIRED</h3>
      <p style="color: rgba(233,84,32,0.6); margin-bottom: 1rem; font-size: 0.9rem; font-family: 'Courier New', monospace;">Access code needed to modify data</p>
      <input type="password" id="passwordInput" placeholder="Enter access code..." />
      <div class="error" id="passwordError" style="display: none;">‚ùå ACCESS DENIED</div>
      <div class="password-modal-buttons">
        <button class="btn-cancel" id="passwordCancel">ABORT</button>
        <button class="btn-submit" id="passwordSubmit">UNLOCK</button>
      </div>
    </div>
  </div>

  <script is:inline define:vars={{ initialData: progressData, todayDate: today, initialEntry: currentEntry }}>
    let currentData = JSON.parse(JSON.stringify(initialData));
    let isSyncing = false;
    let syncTimeout = null;
    const AUTO_SYNC_DELAY = 2000; // 2 seconds after last change
    let currentCalendarMonth = new Date();
    let isAuthenticated = false;
    let pendingAction = null;
    
    // SHA-256 hash of the password (not reversible)
    const PASSWORD_HASH = '6829fefe94561a77be3ceaa06999799c532424caaae91f76375966d286a7d501';

    // Check if already authenticated in this session
    const sessionAuth = sessionStorage.getItem('authenticated');
    if (sessionAuth === 'true') {
      isAuthenticated = true;
    }

    // SHA-256 hash function
    async function sha256(message) {
      const msgBuffer = new TextEncoder().encode(message);
      const hashBuffer = await crypto.subtle.digest('SHA-256', msgBuffer);
      const hashArray = Array.from(new Uint8Array(hashBuffer));
      const hashHex = hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
      return hashHex;
    }

    // Password modal functions
    function showPasswordModal(callback) {
      if (isAuthenticated) {
        callback();
        return;
      }

      pendingAction = callback;
      const modal = document.getElementById('passwordModal');
      const input = document.getElementById('passwordInput');
      const error = document.getElementById('passwordError');
      
      modal.classList.add('visible');
      input.value = '';
      error.style.display = 'none';
      input.focus();
    }

    function hidePasswordModal() {
      const modal = document.getElementById('passwordModal');
      modal.classList.remove('visible');
      pendingAction = null;
    }

    async function checkPassword() {
      const input = document.getElementById('passwordInput');
      const error = document.getElementById('passwordError');
      const password = input.value;
      
      const hashedInput = await sha256(password);

      if (hashedInput === PASSWORD_HASH) {
        isAuthenticated = true;
        sessionStorage.setItem('authenticated', 'true');
        sessionStorage.setItem('pwd', hashedInput);
        hidePasswordModal();
        if (pendingAction) {
          pendingAction();
        }
      } else {
        error.style.display = 'block';
        input.value = '';
        input.focus();
      }
    }

    // Password modal event listeners
    document.getElementById('passwordSubmit').addEventListener('click', checkPassword);
    document.getElementById('passwordCancel').addEventListener('click', hidePasswordModal);
    document.getElementById('passwordInput').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        checkPassword();
      }
    });

    // Helper to get color based on completion percentage
    function getColorForPercentage(percentage) {
      // Red (#f44336) to Green (#00ff00)
      const red = { r: 244, g: 67, b: 54 };
      const green = { r: 0, g: 255, b: 0 };
      
      const ratio = percentage / 100;
      const r = Math.round(red.r + (green.r - red.r) * ratio);
      const g = Math.round(red.g + (green.g - red.g) * ratio);
      const b = Math.round(red.b + (green.b - red.b) * ratio);
      
      return `rgb(${r}, ${g}, ${b})`;
    }

    // Calculate completion percentage for a day
    function getCompletionPercentage(entry) {
      if (!entry) return 0;
      const tasks = [entry.training, entry.coursera, entry.duolingo, entry.meditation];
      const completed = tasks.filter(t => t).length;
      return (completed / 4) * 100;
    }

    // Render calendar
    function renderCalendar() {
      const calendarGrid = document.getElementById('calendarGrid');
      const monthYearEl = document.getElementById('calendarMonthYear');
      
      const year = currentCalendarMonth.getFullYear();
      const month = currentCalendarMonth.getMonth();
      
      monthYearEl.textContent = new Date(year, month).toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
      
      const firstDay = new Date(year, month, 1);
      const lastDay = new Date(year, month + 1, 0);
      const firstDayOfWeek = firstDay.getDay();
      const daysInMonth = lastDay.getDate();
      
      calendarGrid.innerHTML = '';
      
      // Day headers
      const dayHeaders = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
      dayHeaders.forEach(day => {
        const header = document.createElement('div');
        header.className = 'calendar-day-header';
        header.textContent = day;
        calendarGrid.appendChild(header);
      });
      
      // Empty cells before first day
      for (let i = 0; i < firstDayOfWeek; i++) {
        const emptyDay = document.createElement('div');
        emptyDay.className = 'calendar-day empty';
        calendarGrid.appendChild(emptyDay);
      }
      
      // Day cells
      for (let day = 1; day <= daysInMonth; day++) {
        const date = new Date(year, month, day);
        const dateString = date.toISOString().split('T')[0];
        const entry = currentData.dailyEntries.find(e => e.date === dateString);
        const percentage = getCompletionPercentage(entry);
        
        const dayEl = document.createElement('div');
        dayEl.className = 'calendar-day';
        dayEl.setAttribute('data-astro-cid-j7pv25f6', '');
        if (dateString === todayDate) {
          dayEl.classList.add('today');
        }
        
        // Removed dynamic background color to ensure text readability
        // dayEl.style.backgroundColor = getColorForPercentage(percentage);
        
        const dayNumber = document.createElement('div');
        dayNumber.className = 'calendar-day-number';
        dayNumber.setAttribute('data-astro-cid-j7pv25f6', '');
        dayNumber.textContent = day;
        
        const dayPercentage = document.createElement('div');
        dayPercentage.className = 'calendar-day-percentage';
        dayPercentage.setAttribute('data-astro-cid-j7pv25f6', '');
        dayPercentage.textContent = entry ? `${Math.round(percentage)}%` : '';
        if (entry) {
          dayPercentage.style.setProperty('--progress', `${percentage}%`);
        }
        
        dayEl.appendChild(dayNumber);
        
        // Add task list
        if (entry) {
          const taskList = document.createElement('div');
          taskList.className = 'calendar-day-tasks';
          taskList.setAttribute('data-astro-cid-j7pv25f6', '');
          
          const tasks = [
            { name: 'Training', completed: entry.training },
            { name: 'Coursera', completed: entry.coursera },
            { name: 'Duolingo', completed: entry.duolingo },
            { name: 'Meditation', completed: entry.meditation }
          ];
          
          tasks.forEach(task => {
            const taskEl = document.createElement('div');
            taskEl.className = `calendar-day-task ${task.completed ? 'completed' : 'incomplete'}`;
            taskEl.setAttribute('data-astro-cid-j7pv25f6', '');
            
            const iconSpan = document.createElement('span');
            iconSpan.className = 'icon';
            iconSpan.setAttribute('data-astro-cid-j7pv25f6', '');
            iconSpan.textContent = task.completed ? '‚úì' : '‚úó';
            
            const nameSpan = document.createElement('span');
            nameSpan.className = 'name';
            nameSpan.setAttribute('data-astro-cid-j7pv25f6', '');
            nameSpan.textContent = task.name;
            
            taskEl.appendChild(iconSpan);
            taskEl.appendChild(document.createTextNode(' '));
            taskEl.appendChild(nameSpan);
            
            taskList.appendChild(taskEl);
          });
          
          dayEl.appendChild(taskList);
        }
        
        dayEl.appendChild(dayPercentage);
        
        dayEl.addEventListener('click', () => showDayDetails(dateString, entry));
        
        calendarGrid.appendChild(dayEl);
      }
    }

    // Close day details popup
    function closeDayDetails() {
      const dayDetails = document.getElementById('dayDetails');
      dayDetails.classList.remove('visible');
    }

    // Show day details
    function showDayDetails(dateString, entry) {
      const dayDetails = document.getElementById('dayDetails');
      const dayDetailsDate = document.getElementById('dayDetailsDate');
      const dayDetailsList = document.getElementById('dayDetailsList');
      const dayDetailsComment = document.getElementById('dayDetailsComment');
      const dayDetailsCommentText = document.getElementById('dayDetailsCommentText');
      
      const date = new Date(dateString + 'T00:00:00');
      dayDetailsDate.textContent = date.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
      
      if (!entry) {
        dayDetailsList.innerHTML = '<li style="text-align: center; color: #999;">No data for this day</li>';
        dayDetailsComment.style.display = 'none';
        dayDetails.classList.add('visible');
        return;
      }
      
      const goals = [
        { name: 'Training', completed: entry.training },
        { name: 'Coursera Course', completed: entry.coursera },
        { name: 'Duolingo', completed: entry.duolingo },
        { name: 'Meditation', completed: entry.meditation }
      ];
      
      dayDetailsList.innerHTML = '';
      goals.forEach(goal => {
        const li = document.createElement('li');
        li.className = goal.completed ? 'completed' : 'incomplete';
        li.innerHTML = `
          <span class="icon">${goal.completed ? '‚úì' : '‚úó'}</span>
          <span>${goal.name}</span>
        `;
        dayDetailsList.appendChild(li);
      });
      
      if (entry.comment && entry.comment.trim()) {
        dayDetailsComment.style.display = 'block';
        dayDetailsCommentText.textContent = entry.comment;
      } else {
        dayDetailsComment.style.display = 'none';
      }
      
      dayDetails.classList.add('visible');
    }

    // View toggle
    document.getElementById('todayViewBtn').addEventListener('click', () => {
      document.getElementById('todayView').classList.remove('hidden');
      document.getElementById('calendarView').classList.remove('active');
      document.getElementById('todayViewBtn').classList.add('active');
      document.getElementById('calendarViewBtn').classList.remove('active');
    });

    document.getElementById('calendarViewBtn').addEventListener('click', () => {
      document.getElementById('todayView').classList.add('hidden');
      document.getElementById('calendarView').classList.add('active');
      document.getElementById('todayViewBtn').classList.remove('active');
      document.getElementById('calendarViewBtn').classList.add('active');
      renderCalendar();
    });

    // Close day details when clicking close button or outside modal
    document.getElementById('dayDetailsClose').addEventListener('click', closeDayDetails);
    document.getElementById('dayDetails').addEventListener('click', (e) => {
      if (e.target.id === 'dayDetails') {
        closeDayDetails();
      }
    });

    // Calendar navigation
    document.getElementById('prevMonth').addEventListener('click', () => {
      currentCalendarMonth.setMonth(currentCalendarMonth.getMonth() - 1);
      renderCalendar();
    });

    document.getElementById('nextMonth').addEventListener('click', () => {
      currentCalendarMonth.setMonth(currentCalendarMonth.getMonth() + 1);
      renderCalendar();
    });

    document.getElementById('todayBtn').addEventListener('click', () => {
      currentCalendarMonth = new Date();
      renderCalendar();
    });

    // Helper to collect current state
    function collectCurrentState() {
      // Get today's entry or find/create it
      let todayEntry = currentData.dailyEntries.find(e => e.date === todayDate);
      
      if (!todayEntry) {
        todayEntry = {
          date: todayDate,
          training: false,
          coursera: false,
          duolingo: false,
          meditation: false,
          comment: ''
        };
        currentData.dailyEntries.push(todayEntry);
      }

      // Update with current form values
      todayEntry.training = document.getElementById('goal-training').checked;
      todayEntry.coursera = document.getElementById('goal-coursera').checked;
      todayEntry.duolingo = document.getElementById('goal-duolingo').checked;
      todayEntry.meditation = document.getElementById('goal-meditation').checked;
      todayEntry.comment = document.getElementById('dailyComment').value;
      
      currentData.currentCourse = document.getElementById('currentCourse').value;

      // Sort entries by date descending (newest first)
      currentData.dailyEntries.sort((a, b) => b.date.localeCompare(a.date));

      return currentData;
    }

    // Auto-sync function
    async function autoSync() {
      if (isSyncing) return;

      const statusMessage = document.getElementById('statusMessage');
      isSyncing = true;

      statusMessage.className = 'status-message visible deploying';
      statusMessage.innerHTML = '<span class="spinner"></span>Syncing...';

      try {
        const payload = collectCurrentState();
        
        // Add password hash for verification
        const storedHash = sessionStorage.getItem('pwd');
        if (!storedHash) {
          throw new Error('Not authenticated');
        }
        payload.passwordHash = storedHash;

        const response = await fetch('/.netlify/functions/update', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(payload)
        });

        const result = await response.json();

        if (response.ok) {
          statusMessage.className = 'status-message visible success';
          statusMessage.textContent = '‚úì Synced successfully!';
          
          setTimeout(() => {
            statusMessage.classList.remove('visible');
          }, 3000);
        } else {
          statusMessage.className = 'status-message visible error';
          statusMessage.textContent = `‚úó Error: ${result.error || 'Failed to sync'}`;
        }
      } catch (error) {
        statusMessage.className = 'status-message visible error';
        statusMessage.textContent = `‚úó Network error: ${error.message}`;
      } finally {
        isSyncing = false;
      }
    }

    // Debounced auto-sync
    function scheduleSync() {
      if (syncTimeout) {
        clearTimeout(syncTimeout);
      }
      syncTimeout = setTimeout(autoSync, AUTO_SYNC_DELAY);
    }

    // Update UI when checkboxes change
    document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
      checkbox.addEventListener('change', (e) => {
        showPasswordModal(() => {
          const goalId = e.target.dataset.goalId;
          const card = document.querySelector(`[data-goal-id="${goalId}"]`);
          
          if (e.target.checked) {
            card.classList.add('completed');
          } else {
            card.classList.remove('completed');
          }

          scheduleSync();
        });

        // If not authenticated, revert the checkbox
        if (!isAuthenticated) {
          e.target.checked = !e.target.checked;
        }
      });
    });

    // Watch for changes in inputs
    document.getElementById('currentCourse').addEventListener('focus', (e) => {
      if (!isAuthenticated) {
        e.target.blur();
        showPasswordModal(() => {
          document.getElementById('currentCourse').focus();
        });
      }
    });

    document.getElementById('currentCourse').addEventListener('input', () => {
      if (isAuthenticated) {
        scheduleSync();
      }
    });

    document.getElementById('dailyComment').addEventListener('focus', (e) => {
      if (!isAuthenticated) {
        e.target.blur();
        showPasswordModal(() => {
          document.getElementById('dailyComment').focus();
        });
      }
    });

    document.getElementById('dailyComment').addEventListener('input', () => {
      if (isAuthenticated) {
        scheduleSync();
      }
    });

    // Sync button handler (for manual sync if needed)
    document.getElementById('syncButton').addEventListener('click', async () => {
      if (syncTimeout) {
        clearTimeout(syncTimeout);
      }
      await autoSync();
    });
  </script>

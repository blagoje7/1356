    .status-message {
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 4px;
      text-align: center;
      font-weight: 600;
      display: none;
      border: 2px solid;
      font-family: 'Courier New', monospace;
      letter-spacing: 0.05rem;
    }

    .status-message.visible {
      display: block;
    }

    .status-message.deploying {
      background: rgba(233,84,32,0.1);
      color: #E95420;
      border-color: #E95420;
      box-shadow: 0 0 10px rgba(233,84,32,0.3);
    }

    .status-message.success {
      background: rgba(119,221,119,0.1);
      color: #77DD77;
      border-color: #77DD77;
      box-shadow: 0 0 10px rgba(119,221,119,0.3);
    }

    .status-message.error {
      background: rgba(223,56,44,0.1);
      color: #DF382C;
      border-color: #DF382C;
      box-shadow: 0 0 10px rgba(223,56,44,0.3);
    }

    .spinner {
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid rgba(0,0,0,0.1);
      border-left-color: #856404;
      border-radius: 50%;
      animation: spin 1s linear infinite;

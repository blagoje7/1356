---
import progressData from '../data/progress.json';

const today = new Date().toISOString().split('T')[0];
const todayEntry = progressData.dailyEntries.find(e => e.date === today);
const hasToday = !!todayEntry;

// If no entry for today, create a default one
const currentEntry = hasToday ? todayEntry : {
  date: today,
  training: false,
  coursera: false,
  duolingo: false,
  meditation: false,
  comment: ''
};

const goals = [
  { id: 'training', name: 'Training', completed: currentEntry.training },
  { id: 'coursera', name: 'Coursera Course', completed: currentEntry.coursera },
  { id: 'duolingo', name: 'Duolingo', completed: currentEntry.duolingo },
  { id: 'meditation', name: 'Meditation', completed: currentEntry.meditation }
];
